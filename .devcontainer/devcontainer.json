// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/go
{
	"name": "Meri ðŸŒŠ",
	"dockerComposeFile": [
		"../docker-compose.yaml"
    ],

	"overrideCommand": true,
	"service": "vscode",
	"runServices": [],  // ["jaeger"],
    "shutdownAction": "stopCompose",
    "workspaceFolder": "/app",

	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
			"moby": true,
			"installDockerBuildx": true,
			"version": "latest",
			"dockerDashComposeVersion": "none"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.isort",
				"ms-azuretools.vscode-docker",
				"stkb.rewrap",
				"tamasfe.even-better-toml",
				"ms-python.debugpy",
				"ms-python.black-formatter",
				"charliermarsh.ruff"
			],
			"settings": {
				"files.eol": "\n",

				// Python settings
				"python.defaultInterpreterPath": "/opt/venv/bin/python",
				"python.formatting.provider": "black",
				"python.analysis.importFormat": "relative",
				"python.analysis.supportDocstringTemplate": true,
				"python.testing.pytestEnabled": true,
				"ruff.enable": true,
				"python.linting.enabled": true,
				"autopep8.importStrategy": "fromEnvironment",
				"black-formatter.importStrategy": "fromEnvironment",
				"isort.importStrategy": "fromEnvironment",
    			"ruff.importStrategy": "fromEnvironment",
				"[python]": {
					"editor.rulers": [120]
				},
				// No A/B testing
				"python.experiments.enabled": false,

				"cSpell.language": "en-GB,en,fi",
				"cSpell.import": [
					"${workspaceFolder}/.devcontainer/cspell.config.yaml"
				]

				// "remote.extensionKind": {
				// 	"ms-azuretools.vscode-docker": "workspace"
				// }
			}
		}
	},

	"mounts": [
		"source=${localEnv:HOME}/.wakatime.cfg,target=/home/vscode/.wakatime.cfg,type=bind,consistency=delegated"
	],

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "pre-commit install --install-hooks",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "vscode"
}
